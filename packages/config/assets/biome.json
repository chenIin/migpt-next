{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": { "enabled": true },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noDoubleEquals": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "files": {
    "include": ["*.js", "*.ts", "*.tsx", "*.json", "*.css"],
    "ignore": ["node_modules/**", "dist/**", "package-lock.json"]
  }
}
